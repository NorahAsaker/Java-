           //4
        Scanner c = new Scanner(System.in);
        System.out.println("Write a number to check");
        int check = c.nextInt();

        int[] nume = {1,13,14,16,8,80,90,50,55,40,40};
        for (int bb: nume) {
            if (bb==check){
                System.out.println("the number is in the array = "+check);
            } else if (bb!=check){
                System.out.println("the number is not on the array");
                break;
            }

        }


