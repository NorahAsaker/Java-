//        1
        int[] scores = {50, 60, 40, 10, 38, 65, 87, 56, 90, 100, 66, 80, 88, 40, 98};
        for (int Grade : scores) {
            if ((Grade >= 95 && Grade <= 100) == true) {
                System.out.println(Grade+" Your Grade is A+");
            } else if ((Grade >= 94 && Grade <= 90) == true) {
                System.out.println(Grade+" Your Grade is A");
            } else if ((Grade >= 85 && Grade <= 89) == true) {
                System.out.println(Grade+" Your Grade is B+");
            } else if ((Grade >= 80 && Grade <= 84) == true) {
                System.out.println(Grade+" Your Grade is B");
            } else if ((Grade >= 75 && Grade <= 79) == true) {
                System.out.println(Grade+" Your Grade is C+");
            } else if ((Grade >= 70 && Grade <= 74) == true) {
                System.out.println(Grade+" Your Grade is C");
            } else if ((Grade >= 65 && Grade <= 69) == true) {
                System.out.println(Grade+" Your Grade is D+");
            } else if ((Grade >= 60 && Grade <= 64) == true) {
                System.out.println(Grade+" Your Grade is D");
            } else if ((Grade > 100) == true) {
                System.out.println(Grade+ " Please Type A real Score");
            } else
                System.out.println(Grade+" Im Sorry To Inform you That You Have Failed");
        }

